<h1>Sign up a camper!</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @signup do |f| %>
  Camper:
  <%= f.collection_select(:camper_id, @campers, :id, :name) %>
  Activity:
  <%= f.collection_select(:activity_id, @activities, :id, :name) %>
  Time:
  <%= f.number_field :time %>

  <%= f.submit %>
<% end %>